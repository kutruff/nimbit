{
  "name": "nimbit",
  "version": "0.1.0",
  "description": "Reflective typing and validation for typescript",
  "homepage": "https://github.com/kutruff/nimbit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kutruff/nimbit"
  },
  "main": "./index.ts",
  "types": "./index.ts",
  "type": "module",
  "scripts": {
    "clean": "rm -rf .turbo node_modules dist",
    "build": "tsup ./index.ts --format esm,cjs --dts --clean --minify --sourcemap",
    "build:nomin": "tsup ./index.ts --format esm,cjs --dts --clean --sourcemap",
    "build:tar": "tar -czf dist.tar.gz dist/index.js",
    "build:size": "pnpm build && pnpm build:tar && echo zipped bytes: $(stat --printf=\"%s\" dist.tar.gz) && rm dist.tar.gz",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest --detectOpenHandles",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {},
  "jest": {
    "preset": "jest-presets/jest/node"
  },
  "devDependencies": {
    "@kutruff-planner/eslint-config": "^0.1.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.42.0",
    "jest-presets": "workspace:^",
    "tsup": "^7.1.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  }
}
