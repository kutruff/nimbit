{
  "name": "nimbit",
  "version": "0.8.1",
  "description": "Reflective typing and validation for TypeScript",
  "homepage": "https://github.com/kutruff/nimbit",
  "repository": {
    "type": "git",
    "url": "https://github.com/kutruff/nimbit"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rm -rf .turbo node_modules dist",
    "build": "tsup",
    "build:minify": "tsup --minify",
    "build:tar": "tar -czf dist.tar.gz dist/index.js",
    "build:size": "pnpm build:minify && pnpm build:tar && echo zipped bytes: $(stat --printf=\"%s\" dist.tar.gz) && rm dist.tar.gz",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest --detectOpenHandles",
    "with-env": "dotenv -e ../../.env --",
    "set-token": "pnpm set //registry.npmjs.org/:_authToken",
    "do-publish": "pnpm build && cp ../../README.md . && pnpm publish --no-git-checks && rm README.md"
  },
  "jest": {
    "preset": "jest-presets/jest/node"
  },
  "devDependencies": {
    "@kutruff-planner/eslint-config": "^0.1.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.46.0",
    "jest-presets": "workspace:^",
    "tsup": "^7.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  },
  "tsup": {
    "dts": true,
    "treeshake": true,
    "clean": true,
    "format": [
      "esm",
      "cjs"
    ],
    "entry": [
      "index.ts"
    ]
  }
}
